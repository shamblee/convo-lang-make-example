          <button
            onClick={(e) => {
              e.stopPropagation()
              toggleFavorite(card.baseFilename)
            }}
            aria-label={fav ? "Remove from favorites" : "Add to favorites"}
            className={cls(
              "inline-flex items-center gap-1 text-xs font-semibold",
